---
import Boton from "../components/Boton.astro";
import CardSoluciones from "../components/CardSoluciones.astro";
import Comentario from "../components/Comentario.astro";
import Container from "../components/Container.astro";
import Subtitulo from "../components/Subtitulo.astro";
import Titulos from "../components/Titulos.astro";
import data from "../data/solucion.json";
---

<section id="solucion">
  <Container>
    <Titulos
      texto_1="Potencia tu liderazgo creativo y obtén"
      texto_2="Porro aliquam dolorum id rerum"
    />
    <Subtitulo
      texto_color="#f4f4f4"
      texto_1="lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam voluptatibus"
    />
    <div
      class="grid grid-col-1 md:grid-cols-2 lg:grid-cols-3 gap-2 place-items-center w-full px-4"
    >
      {
        data.map((item) => (
          <CardSoluciones
            numero={item.numero}
            titulo={item.titulo}
            texto={item.texto}
          />
        ))
      }
    </div>
    <Comentario />
    <Boton texto="¿COMENZAMOS?" />
  </Container>
</section>
