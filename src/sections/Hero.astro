---
import Boton from "../components/Boton.astro";
import Container from "../components/Container.astro";
import Titulos from "../components/Titulos.astro";
---

<section id="hero">
  <Container>
    <h1 class="w-full mx-auto grid place-items-center">
      <img
        src="/images/logo_completo.avif"
        alt="Pasap logo"
        aria-label="PASAP Simplificá tu negocio de seguros"
        class="w-[clamp(200px,50vw,450px)] max-w-[450px]"
      />
    </h1>
    <Titulos texto_1="Simplificá tu negocio de seguros" />

    <div class="flex flex-col lg:flex-row gap-5 items-center">
      <div class="flex flex-col gap-4 p-4 order-2 lg:order-1 w-full lg:w-[60%] ">
        <p class="text-left text-[clamp(1rem,5vw,1.5rem)] grid gap-5">
          <span
            >Lorem ipsum dolor sit <strong class="font-semibold"
              >amet consectetur adipisicing elit.</strong
            > Porro aliquam dolorum id rerum earum impedit nobis vitae odio eveniet
            reprehenderit nisi</span
          >
          <span
            >Lorem ipsum dolor sit amet consectetur adipisicing elit. Porro
            aliquam dolorum id rerum earum impedit nobis vitae odio eveniet
            reprehenderit nisi</span
          >
        </p>
        <div class="mt-4 w-full grid place-items-center">
          <Boton texto="QUIERO SUMARME A PASAP" />
        </div>
      </div>
      <div
        class="flex justify-center items-center lg:order-2 bg-[url('/images/hero-bg-img.avif')] bg-cover bg-center bg-no-repeat"
      >
        <img
          class="max-h-[500px] object-contain drop-shadow-2xl drop-shadow-suplementary-1/20"
          src="/images/hero-img.avif"
          alt="Hero Image"
        />
      </div>
    </div>
  </Container>
</section>
