---
import Boton from "../components/Boton.astro";
import Container from "../components/Container.astro";
---

<section
  id="ultimo-llamado"
  class="w-full bg-suplementary-2/70"
>
  <Container>
    <div class="flex flex-col lg:flex-row gap-5 items-center text-gray-50">
      <div class="flex flex-col gap-4 p-4 order-2 lg:order-1 w-full lg:w-[60%] ">
        <p class="text-left text-[clamp(1rem,5vw,1.5rem)] grid gap-5">
          <span
            class="text-[clamp(1.6rem,5vw,2rem)] leading-tight font-semibold text-center lg:text-left"
          >
            Convertite en un Productor de seguros 100% digital
          </span>
          <span
            >Lorem ipsum dolor sit amet consectetur adipisicing elit. Porro
            aliquam dolorum id rerum earum impedit nobis vitae odio eveniet
            reprehenderit nisi</span
          >
        </p>
        <div class="mt-4 w-full grid place-items-center">
          <Boton texto="QUIERO SUMARME A PASAP"/>
        </div>
      </div>
      <div class="flex justify-center items-center lg:order-2">
        <img
          class="max-h-[500px] object-contain drop-shadow-2xl drop-shadow-suplementary-1/20"
          src="/images/hero-img.avif"
          alt="Hero Image"
        />
      </div>
    </div>
  </Container>
</section>
