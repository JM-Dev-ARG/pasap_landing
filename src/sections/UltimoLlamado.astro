---
import Boton from "../components/Boton.astro";
import Container from "../components/Container.astro";
---

<section
  id="ultimo-llamado"
  class="w-full bg-slate-800 relative before:content-['']  before:bg-[url('/images/back-ultimo.avif')]  before:lg:absolute before:top-0 before:right-0 before:size-full  before:bg-fill before:bg-right before:bg-no-repeat before:opacity-40    "
>
  <Container className="pt-16">
    <div class="flex flex-col lg:flex-row gap-5 items-center text-gray-50">
      <div class="flex flex-col gap-4 p-4 order-2 lg:order-1 w-full lg:w-[60%]">
        <p class="text-center lg:text-left text-[clamp(1rem,5vw,1.5rem)] grid gap-5">
          <span
            class="text-[clamp(1.6rem,5vw,2rem)] leading-tight font-semibold text-center lg:text-left text-pretty"
          >
          Activate con Pasap 

          </span>
          <span
            >Podes conquistar el mercado de seguros digitales sumandote al equipo que lo tiene todo:</span
          >
          <ul class="text-[clamp(1rem,5vw,1.5rem)] list-inside mx-auto lg:mx-0 ">
            <li >Tecnología</li>
            <li>Experiencia</li>
            <li>Comunicación</li>
          </ul>
        </p>
        <div class="mt-4 w-full grid place-items-center">
          <Boton texto="QUIERO SUMARME A PASAP" />
        </div>
      </div>
      <div
        class="flex justify-center items-center lg:order-2 h-full "
      >
        <img
          class="h-[400px] lg:max-h-[500px] object-contain drop-shadow-2xl drop-shadow-suplementary-1/20"
          src="/images/hero-img.avif"
          alt="Hero Image"
        />
      </div>
    </div>
  </Container>
</section>


<style>
  li::marker{
  content: "✔️";
  }
</style>