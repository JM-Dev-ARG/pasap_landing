---
import Subtitulo from "../components/Subtitulo.astro";
import Container from "../components/Container.astro";
import Titulos from "../components/Titulos.astro";
import Boton from "../components/Boton.astro";
import Comentario from "../components/Comentario.astro";
import CardRetos from "../components/CardRetos.astro";
import data from "../data/cardRetos.json"

---

<section
  id="retos"
  class="w-full bg-suplementary-1/80"
>
  <Container>
    <span class="w-full pt-9"></span>
    <Titulos
      texto_color="gray-50"
      texto_1="¿Estás preparado para ser un verdadero "
      texto_2="Asesor de Seguros digital?"
    />
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-5 items-center">
      <div class="flex flex-col gap-4 p-4 order-2 lg:order-1">
        <div
          class="text-center md:text-left text-[clamp(1rem,5vw,1.5rem)] grid gap-5 text-gray-50 text-pretty"
        >
          <span
            >Tenés el propósito, las ganas y la energía para realizarlo, pero te enfrentas con múltiples inconvenientes a diario que te impiden avanzar: 

          </span>

          {
            data.map((item) => (
              <CardRetos
                titulo={item.titulo}
                texto={item.texto}
              />
            ))
          }
        </div>
      </div>
      <div class="flex justify-center items-center lg:order-2 drop-shadow-2xl">
        <div
          class="size-[50%] lg:size-[calc(100%-35%)] relative retos"
        >
          <img
            src="/images/retos.avif"
            alt=""
            class="w-full h-full rounded-full"
          />
        </div>
      </div>
    </div>

  </Container>
</section>


<style>
  .retos{
    z-index: 1;
  }
  .retos::after, .retos::before {
    content: "";
    position: absolute;
    width: 50%;
    height: 50%;
    } 

    .retos::after{
      top: -5%;
      left: -20%;
      background-image: url(/images/retos-flechas.avif);
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      transform: rotate(180deg);
    }

    .retos::before{
      z-index: -10;
      bottom: -5%;
      right: -15%;
      background-image: url(/images/retos-circulo.avif);
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;

    }
</style>