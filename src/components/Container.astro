---
interface Props {
  bg_color?: string;
  className?: string;
}
const { bg_color, className } = Astro.props as Props;
---

<div
  class={bg_color
    ? `w-full py-16 bg-${bg_color} ${className}`
    : `w-full py-16 ${className}`}
>
  <div class="w-full max-w-6xl mx-auto">
    <div class="w-full
    grid
    place-items-center
    gap-7">
      <slot />
    </div>
  </div>
</div>
