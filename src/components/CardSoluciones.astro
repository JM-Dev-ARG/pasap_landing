---
interface Props {
  numero?: number;
  titulo?: string;
  texto?: string;
}

const { numero, titulo, texto } = Astro.props as Props;
---

<div
  class="h-[250px] w-full flex flex-col items-center md:items-start justify-start p-6 gap-2"
>
  <div
    class="flex items-center justify-center px-6 py-2 rounded-2xl text-xl font-title inset-shadow-sm inset-shadow-gray-500/60"
  >
    {numero}
  </div>
  <h3 class="text-2xl font-title">{titulo}</h3>
  <p class="text-pretty text-lg font-medium">
    {texto}
  </p>
</div>
