---
interface Props {
  nombre: string;
  description: string;
  imagen?: string;
  bg_color: string;
  id: number;
}

const { nombre, description, imagen, bg_color, id } = Astro.props;
---

<div class="flex flex-col items-center justify-center gap-4 w-full">
  <div
    class="w-[40%] lg:w-[75%] h-full bg-contain bg-no-repeat bg-center flex items-center justify-center aspect-square"
    style={`background-image: url(${imagen})`}
  >
    <p
      class=" text-[clamp(3.75rem,3vw,5.5rem)] font-semibold text-gray-50 font-title py-10"
    >
      {id}
    </p>
  </div>
  <div
    class="w-[60%] lg:w-full text-gray-50 text-2xl pl-4 py-2 rounded-lg"
    style={`background-color: ${bg_color}`}
  >
    {nombre}
  </div>
  <p class=" w-[60%] lg:w-full text-[clamp(.95rem,2vw,1.2rem)] text-gray-900 text-left text-pretty md:h-[215px] lg:h-[230px]">
    {description}
  </p>
</div>
